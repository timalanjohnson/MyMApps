<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:id="@+id/locationListItem">

    <TextView
        android:id="@+id/locationPrimaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primary Text"
        android:textColor="@color/colorBlack"></TextView>

    <TextView
        android:id="@+id/locationSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationPrimaryText"
        android:text="Secondary Text"
        android:textColor="@color/colorMidGrey"></TextView>

</RelativeLayout>